{
  "name": "alpaca-main",
  "version": "1.0.0",
  "private": true,
  "description": "Django + React monorepo managed with NX",
  "scripts": {
    "preinstall": "node scripts/preinstall-checks.js",
    "install": "cd frontend && npm install && cd .. && cd backend && uv sync && cd .. && node -e \"const fs=require('fs');fs.mkdirSync('.nx',{recursive:true});fs.writeFileSync('.nx/bootstrap-complete',new Date().toISOString());\"",
    "install:frontend": "cd frontend && npm install && cd ..",
    "install:backend": "cd backend && uv sync && cd ..",
    "dev": "node scripts/dev-check.js && nx run-many -t dev --parallel --color",
    "dev:frontend": "nx run frontend:dev",
    "dev:backend": "nx run backend:dev",
    "lint": "nx run-many -t lint --color",
    "lint:fix": "nx run-many -t lint-fix --color",
    "format": "nx run-many -t format --color",
    "format:check": "nx run-many -t format-check --color",
    "test": "nx run-many -t test --color",
    "test:coverage": "nx run-many -t test-coverage --color",
    "build": "nx run frontend:build",
    "docker:up": "docker compose up -d ",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f ",
    "docker:clean": "docker compose down -v",
    "migrate": "nx run backend:migrate",
    "makemigrations": "nx run backend:makemigrations",
    "makemigrations:local": "cd backend && uv run python manage.py makemigrations",
    "backend:shell": "nx run backend:shell"
  },
  "devDependencies": {
    "nx": "^20.0.0",
    "@nx/js": "^20.0.0"
  }
}
